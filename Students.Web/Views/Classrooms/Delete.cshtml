@model Students.Common.Models.Classroom
@using Students.Interfaces
@using System.Globalization
@inject ISharedResourcesService sharedResourcesService
@{

    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");
    ViewData["Title"] = "Delete";
}

<h1>@sharedResourcesService.GetString("Delete", cultureInfo)</h1>

<h3>@sharedResourcesService.GetString("DeleteConfirm", cultureInfo)</h3>
<div>
    <h4>@sharedResourcesService.GetString("Classrooms", cultureInfo)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@sharedResourcesService.GetString("Number", cultureInfo)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">@sharedResourcesService.GetString("Floor", cultureInfo)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Floor)
        </dd>
        <dt class="col-sm-2">@sharedResourcesService.GetString("Capacity", cultureInfo)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@sharedResourcesService.GetString("Delete", cultureInfo)" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.Id">@sharedResourcesService.GetString("Index", cultureInfo)</a>
    </form>
</div>
