@model Students.Common.Models.Lecturer
@using Students.Interfaces
@using System.Globalization
@{
    ViewData["Title"] = "Create";
}
@inject ISharedResourcesService sharedResourcesService
@{
    string? culture = Context.Session.GetString("Culture");
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo("en-US");
    if (culture != null)
    {
        cultureInfo = CultureInfo.GetCultureInfo(culture);  
    }
}

@{
    ViewData["Title"] = "Create";
}

<h1>@sharedResourcesService.GetString("Create", cultureInfo)</h1>

<h4>@sharedResourcesService.GetString("Lecturer", cultureInfo)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" onsubmit="selectChosenSubjects()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@sharedResourcesService.GetString("Name", cultureInfo)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@sharedResourcesService.GetString("Age", cultureInfo)</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <partial name="_SubjectsChoicePartialLecturer" model="Model" />
                <span asp-validation-for="AvailableSubjects" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@sharedResourcesService.GetString("Create", cultureInfo)" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@sharedResourcesService.GetString("Index", cultureInfo)</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/student_subjects-1.0.1.js"></script>
}