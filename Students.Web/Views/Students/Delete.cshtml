@using Students.Interfaces
@using System.Globalization
@model Student

@{
    ViewData["Title"] = "Delete";
}
@inject ISharedResourcesService sharedResourcesService
@{
    string? culture = Context.Session.GetString("Culture");
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo("en-US");
    if (culture != null)
    {
        cultureInfo = CultureInfo.GetCultureInfo(culture);
    }
}
<h1>@sharedResourcesService.GetString("Delete", cultureInfo)</h1>

<h3>@sharedResourcesService.GetString("DeleteConfirm", cultureInfo)</h3>

<div>
    <h4>@sharedResourcesService.GetString("Student", cultureInfo)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@sharedResourcesService.GetString("Name", cultureInfo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">@sharedResourcesService.GetString("Age", cultureInfo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Age)</dd>
        <dt class="col-sm-2">@sharedResourcesService.GetString("Major", cultureInfo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Major)</dd>
        <dt class="col-sm-2">@sharedResourcesService.GetString("PostalCode", cultureInfo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PostalCode)</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value = "@sharedResourcesService.GetString("Delete", cultureInfo)" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.Id">@sharedResourcesService.GetString("Index", cultureInfo)</a>
    </form>
</div>
