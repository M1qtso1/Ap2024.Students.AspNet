@using Students.Interfaces
@using System.Globalization
@model IEnumerable<Student>

@{
    ViewData["Title"] = "Index";
}
@inject ISharedResourcesService sharedResourcesService
@{
    string? culture = Context.Session.GetString("Culture");
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo("en-US");
    if (culture != null)
    {
        cultureInfo = CultureInfo.GetCultureInfo(culture);
    }
}


<h1>@sharedResourcesService.GetString("Title", cultureInfo)</h1>


<p>
    <a asp-action="Create">@sharedResourcesService.GetString("Create", cultureInfo)</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@sharedResourcesService.GetString("Name", cultureInfo)</th>
            <th>@sharedResourcesService.GetString("Age", cultureInfo)</th>
            <th>@sharedResourcesService.GetString("Major", cultureInfo)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Major)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">@sharedResourcesService.GetString("Edit", cultureInfo)</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">@sharedResourcesService.GetString("Details", cultureInfo)</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@sharedResourcesService.GetString("Delete", cultureInfo)</a>
                </td>
            </tr>
        }
    </tbody>
</table>
