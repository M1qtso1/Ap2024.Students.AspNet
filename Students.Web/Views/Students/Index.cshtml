@using Students.Interfaces
@model IEnumerable<Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index of students</h1>

@inject ISharedResourcesService sharedResourcesService


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Major)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@sharedResourcesService["Edit"]</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@sharedResourcesService["Details"]</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@sharedResourcesService["Delete"]</a>
            </td>
        </tr>
        }
    </tbody>
</table>
