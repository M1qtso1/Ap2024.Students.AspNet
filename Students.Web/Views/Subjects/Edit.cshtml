@model Subject
@using Students.Interfaces
@using System.Globalization

@{
    ViewData["Title"] = "Edit";
}
@inject ISharedResourcesService sharedResourcesService
@{
    string? culture = Context.Session.GetString("Culture");
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo("en-US");
    if (culture != null)
    {
        cultureInfo = CultureInfo.GetCultureInfo(culture);
    }
}
<h1>@sharedResourcesService.GetString("Edit", cultureInfo)</h1>

<h4>@sharedResourcesService.GetString("Subject", cultureInfo)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">@sharedResourcesService.GetString("NameOfSubject", cultureInfo)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@sharedResourcesService.GetString("Credits", cultureInfo)</label>
                <input asp-for="Credits" class="form-control" />
                <span asp-validation-for="Credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@sharedResourcesService.GetString("StartDate", cultureInfo)</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@sharedResourcesService.GetString("EndDate", cultureInfo)</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@sharedResourcesService.GetString("Save", cultureInfo)" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@sharedResourcesService.GetString("Index", cultureInfo)</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
